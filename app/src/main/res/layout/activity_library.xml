<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryActivity">

    <!-- Top-left components -->
    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/red"
        android:text="@string/left_text"
        android:padding="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/below_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_text"
        android:background="@color/purple"
        android:text="@string/below_left_text"
        android:padding="12dp"
        android:layout_marginStart="16dp"
        />

    <!-- Top-right components -->
    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@color/red"
        android:text="@string/right_text"
        android:padding="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        />

    <!-- Center components -->
    <TextView
        android:id="@+id/center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/deep_purple"
        android:text="@string/center_text"
        android:padding="12dp"
        android:layout_alignStart="@id/above_bottom_center_text"
        android:layout_alignEnd="@id/above_bottom_center_text"
        android:gravity="center"
        />

    <!-- Bottom components -->
    <TextView
        android:id="@+id/bottom_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/indigo"
        android:text="@string/bottom_center_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:id="@+id/above_bottom_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_center_text"
        android:layout_centerHorizontal="true"
        android:background="@color/blue"
        android:text="@string/above_bottom_center_text"
        android:padding="12dp"
        />
</RelativeLayout>
